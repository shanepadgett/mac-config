# Bash configuration as fallback

# Source exports
for export_file in ~/.exports/*.sh; do
    [ -r "$export_file" ] && source "$export_file"
done

# Enable zoxide
if command -v zoxide &> /dev/null; then
    eval "$(zoxide init bash)"
fi

# Enable direnv
if command -v direnv &> /dev/null; then
    eval "$(direnv hook bash)"
fi

# Source functions
for function_file in ~/.functions/*.sh; do
    [ -r "$function_file" ] && source "$function_file"
done

# Source aliases
if [ -f ~/.aliases ]; then
    source ~/.aliases
fi

# History
HISTSIZE=10000
HISTFILESIZE=10000
shopt -s histappend
shopt -s checkwinsize

# Machine-specific configs (if they exist)
if [ -f ~/.bashrc.local ]; then
    source ~/.bashrc.local
fi
export PATH="$HOME/.local/bin:$PATH"
export GOPATH=/go
export PATH="$GOPATH/bin:$PATH"
export DIRENV_LOG_FORMAT=""
